# Database Configuration
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="evershop"
DB_USER="postgres"
DB_PASSWORD="your_password_here"
DB_SSLMODE="disable"  # Use "require" for production on Render

# Application Configuration
NODE_ENV="development"  # Use "production" for Render
APP_BASE_URL="http://localhost:3000"  # Update to your Render URL

# Security
JWT_SECRET="your_jwt_secret_here"  # Auto-generated on Render
SESSION_SECRET="your_session_secret_here"

# Razorpay Payment Gateway
RAZORPAY_KEY_ID="your_razorpay_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
RAZORPAY_WEBHOOK_SECRET="your_webhook_secret"

# Optional: Email Configuration (if using email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your_email@gmail.com"
# SMTP_PASSWORD="your_app_password"

# Optional: Storage Configuration (if using cloud storage)
# AWS_ACCESS_KEY_ID="your_aws_key"
# AWS_SECRET_ACCESS_KEY="your_aws_secret"
# AWS_BUCKET_NAME="your_bucket_name"
# AWS_REGION="ap-south-1"
